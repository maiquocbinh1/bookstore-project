{
  "name": "bookstore-system",
  "version": "1.0.0",
  "description": "Hệ thống bán sách trực tuyến với MySQL backend",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": ["bookstore", "ecommerce", "mysql", "nodejs", "react"],
  "author": "maiquocbinh1",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/maiquocbinh1/bookstore.git"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "crypto": "^1.0.1",
    "pdfkit": "^0.13.0",
    "xlsx": "^0.18.5",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
